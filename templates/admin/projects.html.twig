{% extends 'base.html.twig' %}

{% block title %}Gestion des Projets
{% endblock %}

{% block body %}
	<h1>Gestion des Projets</h1>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Title</th>
				<th>Description</th>
				<th>Image</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for project in projects %}
				<tr>
					<td>{{ project.id }}</td>
					<td>{{ project.title|striptags }}</td>
					<td>{{ project.description|striptags }}</td>
					<td><img src="{{ vich_uploader_asset(project, 'imageFile') }}" alt="{{ project.title|striptags }}" style="max-width: 100px;"/></td>
					<td>
						<a href="{{ path('admin_projects_edit', {id: project.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
						<a href="{{ path('admin_projects_delete', {id: project.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('admin_projects_create') }}" class="btn btn-success">Cr√©er un nouveau projet</a>
	<a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">Retour au Dashboard</a>
{% endblock %}
