{% extends 'base.html.twig' %}

{% block title %}Gestion des Dons
{% endblock %}

{% block body %}
	<h1>Gestion des Dons</h1>

	<table>
		<thead>
			<tr>
				<th>ID</th>
				<th>Somme</th>
				<th>Date</th>
				<th>Message</th>
				<th>Utilisateur</th>
				<th>Projet</th>
			</tr>
		</thead>
		<tbody>
			{% for donation in donations %}
				<tr>
					<td>{{ donation.id }}</td>
					<td>{{ donation.sum }}</td>
					<td>{{ donation.date|date('Y-m-d') }}</td>
					<td>{{ donation.message }}</td>
					<td>{{ donation.user ? donation.user.nickname : 'Anonyme' }}</td>
					<td>{{ donation.projects.title }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
