{% extends 'base.html.twig' %}

{% block title %}Gestion des Dons
{% endblock %}

{% block body %}
	<h1>Gestion des Dons</h1>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Somme</th>
				<th>Date</th>
				<th>Message</th>
				<th>Utilisateur</th>
				<th>Projet</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for donation in donations %}
				<tr>
					<td>{{ donation.id }}</td>
					<td>{{ donation.sum }}</td>
					<td>{{ donation.date|date('Y-m-d') }}</td>
					<td>{{ donation.message }}</td>
					<td>{{ donation.user ? donation.user.nickname : 'Anonyme' }}</td>
					<td>{{ donation.projects.title }}</td>
					<td>
						<a href="{{ path('admin_donations_edit', {id: donation.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
						<a href="{{ path('admin_donations_delete', {id: donation.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('admin_donations_create') }}" class="btn btn-success">Cr√©er un nouveau don</a>
{% endblock %}
