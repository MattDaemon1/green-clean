{% extends 'base.html.twig' %}

{% block title %}Dashboard Administrateur
{% endblock %}

{% block body %}
	<h1>Bienvenue sur le Dashboard Administrateur</h1>

	<div class="dashboard-cards">
		<div class="card">
			<h2>Gestion des Dons</h2>
			<p>Consultez et gérez les donations effectuées.</p>
			<a href="{{ path('admin_donations') }}" class="btn btn-success">Voir les Dons</a>
		</div>

		<div class="card">
			<h2>Gestion des Utilisateurs</h2>
			<p>Gérez les utilisateurs de la plateforme.</p>
			<a href="{{ path('admin_users') }}" class="btn btn-success">Voir les Utilisateurs</a>
		</div>

		<div class="card">
			<h2>Gestion des Projets</h2>
			<p>Consultez et administrez les projets en cours.</p>
			<a href="{{ path('admin_projects') }}" class="btn btn-success">Voir les Projets</a>
		</div>
	</div>
{% endblock %}
