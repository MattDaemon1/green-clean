{% extends 'base.html.twig' %}

{% block title %}Nos projets
{% endblock %}

{% block body %}

	<h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Nos projets</h1>

	<form method="get" action="{{ path('app_projets_filter') }}" class="mb-4">
		<div class="row">
			<div class="col-md-4">
				<input type="text" name="keyword" class="form-control" placeholder="Mots-clés"/>
			</div>
			<div class="col-md-4">
				<input type="date" name="updatedAfter" class="form-control" placeholder="Date de mise à jour"/>
			</div>
			<div class="col-md-4">
				<input type="number" name="minDonations" class="form-control" placeholder="Nombre minimum de donations"/>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col-md-12 text-center">
				<button type="submit" class="btn btn-primary">Filtrer</button>
			</div>
		</div>
	</form>

	<div class="row text-center">
		{% for projets in projets %}
			{% include "partials/projets/_projets_block.html.twig" %}

		{% endfor %}

	</div>


{% endblock %}
