{% extends 'base.html.twig' %}

{% block title %}Contact - Green & Clean{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <h1>Contact</h1>
    <p class="mb-4 text-center">Vous pouvez nous contacter pour toute question ou pour proposer un projet. Remplissez le formulaire ci-dessous, nous vous répondrons rapidement.</p>
    {% if success %}
        <div class="alert alert-success text-center">Votre message a bien été envoyé. Merci pour votre prise de contact !</div>
    {% else %}
        {{ form_start(form) }}
        <div class="row mb-3 p-4" style="background-color: #f4f4f4; border-radius: 12px;">
            <div class="col-md-6 mb-3">
                {{ form_row(form.nom) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(form.prenom) }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-12 mb-3">
                {{ form_row(form.email) }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-12 mb-3">
                {{ form_row(form.sujet) }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-12 mb-3">
                {{ form_row(form.message) }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-12 mb-3 d-flex align-items-center">
                <div class="form-check me-2">
                    {{ form_widget(form.rgpd, {'attr': {'class': 'form-check-input'}}) }}
                </div>
                <label class="form-check-label" for="{{ form.rgpd.vars.id }}">{{ form.rgpd.vars.label|raw }}</label>
                {{ form_errors(form.rgpd) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Envoyer</button>
        {{ form_end(form) }}
    {% endif %}
</div>
{% endblock %}
