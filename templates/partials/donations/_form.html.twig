<div class="form-container">
	<h2 class="form-title">Faire un don</h2>

	{{ form_start(form, {'attr': {'class': 'donation-form'}}) }}

	<div class="form-group">
		<label for="donation-sum">Montant du don</label>
		{{ form_widget(form.sum, {'attr': {'class': 'form-control', 'id': 'donation-sum', 'placeholder': 'Entrez le montant'}}) }}
	</div>

	<div class="form-group">
		<label for="donation-message">Message</label>
		{{ form_widget(form.message, {'attr': {'class': 'form-control', 'id': 'donation-message', 'placeholder': 'Ajoutez un message (optionnel)'}}) }}
	</div>

	<div class="form-actions">
		<button type="submit" class="btn btn-primary">
			<i class="fa fa-save"></i>
			Enregistrer
		</button>
	</div>

	{{ form_end(form) }}
</div>
